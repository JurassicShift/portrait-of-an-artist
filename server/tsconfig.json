{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "Bundler",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"types": ["node", "vitest/globals"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"]
}
